<idea-plugin version="2" url="https://github.com/zielu/GitToolBox">
  <id>zielu.gittoolbox</id>
  <name>GitToolBox</name>
  <version>13.4.1</version>
  <vendor url="https://github.com/zielu/GitToolBox">Łukasz Zieliński</vendor>

  <description><![CDATA[
    <h2>Enriches Git integration</h2>
    Following functionality was added:
    <ul>
      <li><b>Additional VCS -> Git menu actions:</b>
        <ul>
          <li>'Push tags on branch' - pushes selected tags for current branch</li>
          <li>'Fetch and show behind' - fetches from remote and displays number of commits that current branch is behind remote</li>
        </ul>
      </li>
      <li><b>Status bar component:</b>
        <ul>
          <li>'Git Stat' - shows number of commits that current branch is ahead / behind remote</li>
        </ul>
      </li>
      <li><b>Project View decoration:</b>
        <ul>
          <li>shows number of commits that current branch is ahead / behind remote</li>
        </ul>
      </li>
      <li><b>Configuration:</b>
        <ul>
          <li>Settings / Git ToolBox</li>
        </ul>
      </li>
    </ul>
    ]]></description>

  <change-notes><![CDATA[
      <h3>Changes is 13.4.0</h3>
      <ul>
        <li>Fixed status bar display for no remote state</li>
        <li>Display status in Project View. Configurable in Settings / Git ToolBox</li>
      </ul>
      <h3>Changes is 13.3.1</h3>
      <ul>
        <li>Added plugin configuration: Settings / Git ToolBox</li>
        <li>Configurable status presentation modes (<a href="https://github.com/zielu/GitToolBox/issues/6">#6</a>)</li>
        <li>Configurable status bar widget visibility (<a href="https://github.com/zielu/GitToolBox/issues/4">#4</a>)</li>
        <li>Runs on JDK 1.6 (<a href="https://github.com/zielu/GitToolBox/issues/7">#7</a>)</li>
      </ul>
      <h3>Changes is 13.1.1</h3>
      <ul>
        <li>Recompiled with 1.6 compatibility (<a href="https://github.com/zielu/GitToolBox/issues/2">issue 2</a>)</li>
      </ul>
      <h3>Changes is 13.0.2</h3>
      <ul>
        <li>133.x compatible release</li>
      </ul>
      ]]>
  </change-notes>


  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products -->
  <depends>com.intellij.modules.lang</depends>
  <depends>Git4Idea</depends>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="138.0000"/>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <applicationService serviceImplementation="zielu.gittoolbox.GitToolBoxConfig"/>
    <applicationService serviceImplementation="zielu.gittoolbox.ui.StatusMessages"/>
    <applicationConfigurable instance="zielu.gittoolbox.ui.config.GitToolBoxConfigurable" id="zielu.svntoolbox.app.config" />
    <projectViewNodeDecorator implementation="zielu.gittoolbox.ui.projectView.GitProjectViewDecorator"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
    <component>
      <implementation-class>zielu.gittoolbox.GitToolBoxProject</implementation-class>
    </component>
  </project-components>

  <actions>
    <action class="zielu.gittoolbox.actions.GitFetchAndShowStatusAction" id="GitToolBox.FetchAndStatus"
            text="Fetch and show behind">
      <add-to-group group-id="GitRepositoryActions" anchor="after" relative-to-action="Git.Fetch"/>
    </action>
    <action class="zielu.gittoolbox.actions.GitPushTagsAction" id="GitToolBox.PushTags"
            text="Push tags on branch...">
      <add-to-group group-id="GitRepositoryActions" anchor="after" relative-to-action="Git.Push"/>
    </action>
  </actions>

</idea-plugin>
